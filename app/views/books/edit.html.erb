<div class="editBook">
    <header>
      <h2>Editing Book</h2>
    </header>
    <%= form_with model: @book, url:'/new', local:true do |f| %>
      <div class="title-box">
        <label>Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="body-box">
        <label>Body</label>
      <%= f.text_area :body %>
      </div>
      <div class="update-buttun">
        <%= f.submit 'Update Book' %>
      </div>
      <% end %>
       <div class="edit-buttun">
            <%= link_to "show", "/show" %>
            <%= link_to "Back", "/books" %>
        </div>
    </div>