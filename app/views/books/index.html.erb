<html>
  <body>
    <div class="index-all">
    <h2>Books</h2>
    <table>

      <div class="Title">
        <tr>
          <th>Title</th>
          <th>Body</th>
        </tr>
      </div>

      <% @books.each do |book| %>
      <tr>
        <th><%= book.title %></th>
        <th><%= book.body %>
          <%= link_to "show", book_path(book.id) %>
          <%= link_to "edit", edit_book_path(book.id) %>
          <%= link_to "delete", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
        </th>
      </tr>
      <% end %>

      <tr>
        <th><%= @book.title %></th>
        <th><%= @book.body %></th>
        <div class="link-action">
          <td>show</td>
          <td>Edit</td>
          <td>Destroy</td>got
        </div>
      </tr>

    </div>
    </table>
    <div class="NewBook">
      <header>
        <h2>New Book</h2>
      </header>
      <%= form_with model: @book, local:true do |f| %>
        <div class="title-box">
          <label>Title</label>
          <%= f.text_field :title %>
       </div>
        <div class="body-box">
          <label>Body</label>
          <%= f.text_area :body %>
        </div>
        <div class="create-buttun">
          <%= f.submit 'Create Book' %>
        </div>
        <% end %>
      </div>
    </body>
  </div>
</html>
