<html>
  <body>
    <div class="index-all">
      <div class="index-header">
        <h2>Books</h2>
        <% if @book.errors.any? %>
          <%= @book.errors.count %>errors prohibited this book from being saved:
          <% @book.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>

        <span class="flash-message">
          <%= flash[:notice] %>
        </span>
      </div>

    <table>

      <div class="Title">
        <tr>
          <div class="title-th">
            <div class="title-th-text">
              <th>Title</th>
            </div>
          </div>
          <div class="body-th">
            <div class="body-th-text">
              <th>Body</th>
            </div>
          </div>
        </tr>
      </div>

      <% @books.each do |book| %>
      <tr>
        <th><%= book.title %></th>
        <th><%= book.body %>
          <%= link_to "Show", book_path(book.id) %>
          <%= link_to "Edit", edit_book_path(book.id) %>
          <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
        </th>
      </tr>
      <% end %>

    </div>
    </table>
    <div class="NewBook">
      <header>
        <h2>New Book</h2>
      </header>
      <%= form_with model: @book, local:true do |f| %>
        <div class="title-box">
          <label>Title</label>
          <%= f.text_field :title %>
       </div>
        <div class="body-box">
          <label>Body</label>
          <%= f.text_area :body %>
        </div>
        <div class="create-buttun">
          <%= f.submit 'Create Book' %>
        </div>
        <% end %>
      </div>
    </body>
  </div>
</html>
